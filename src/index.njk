---
layout: body
js: index.js
needsMap: true
eleventyNavigation:
  key: Home
---
<div id="game-container" class="w-full flex flex-col lg:grid lg:grid-cols-2 lg:grid-rows-2" x-data="gameData()" x-init="init()">
	<div id="Sasquatches-container">
		<div class="section-heading">Sasquatches</div>
		<div class="flex justify-center">
			<div class="mx-2">
				<span x-text="numTotal"></span> sasquatches</div>
			<div class="mx-2">
				<span x-text="numIdle()"></span> idle</div>
		</div>
		<div class="w-min m-auto">
			<div class="helper-subheading mt-4 mb-2 text-center">Assign jobs:</div>
			{% for job in jobs %}
				<div class="flex my-4">
					<div class="w-28 text-right pr-2">{{ job.name }}</div>
					<div class="w-14 text-center" x-text="jobs['{{job.id}}']"></div>
					<div class="relative z-0 inline-flex shadow-sm rounded-md">
						<button type="button" @click="changeJob('{{ job.id }}', 'subtract', 1)" :class="{'disabled': jobs['{{job.id}}'] < 1}" x-bind:disabled="jobs['{{job.id}}'] < 1" class="change-button decrement-button">
							<i class="fas fa-minus"></i>
						</button>
						<button type="button" @click="changeJob('{{ job.id }}', 'add', 1)" :class="{'disabled': numIdle() < 1}" x-bind:disabled="numIdle() < 1" class="change-button increment-button">
							<i class="fas fa-plus"></i>
						</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div id="resources-container">
		<div class="section-heading">Resources</div>
		<div class="lg:w-2/3 lg:m-auto">
			<div class="bg-blue-100 rounded-lg m-4 p-4">
				<div class="section-subheading">Materials</div>
				<div class="text-center">Total: <span x-text="totalResources('materials')"></span></div>
				<div class="flex justify-center">
					{% for resource in resources.materials %}
						<div class="flex my-4">
							<div class="w-28 text-right pr-2">{{ resource.name }}:</div>
							<div class="w-14 text-center" x-text="resources['{{resource.id}}']"></div>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="bg-green-100 rounded-lg m-4 p-4">
				<div class="section-subheading">Food</div>
				<div class="text-center">Total: <span x-text="totalResources('food')"></span></div>
				<div class="flex justify-center">
					{% for resource in resources.food %}
						<div class="flex my-4">
							<div class="w-28 text-right pr-2">{{ resource.name }}:</div>
							<div class="w-14 text-center" x-text="resources['{{resource.id}}']"></div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	<div id="threat-container">
		<div class="section-heading">Reveal Threat</div>
	</div>
	<div id="time-container">
		<div class="section-heading">Time</div>
		<div id="day-progress" class="ldBar label-center" style="width: 100%; height: 200px"></div>
	</div>
</div>